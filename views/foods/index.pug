extends ../layout.pug

block content
  .container
    h2.text-center Top Foods
    .row
      each food, index in viewmodel.selected_foods
        .col-md-2.hidden-sm.hidden-xs
          .panel.panel-default
            .panel-heading=food.name
            .panel-body.text-center
              img(src="/static/images/" + food.picture + ".jpg")
            .panel-footer.text-center
              a.btn.btn-default(href="/foods/details/" + food.id) See More
        if index < 4
          .col-xs-3.col-sm-3.hidden-md.hidden-lg
            .panel.panel-default
              .panel-heading=food.name
              .panel-body.text-center
                img(src="/static/images/" + food.picture + ".jpg")
              .panel-footer.text-center
                a.btn.btn-default(href="/foods/details/" + food.id) See More
    .row
      .col-md-2
        h4 Filters
      .col-md-10
        h3.text-center Browse Foods
        .row
          each food in viewmodel.result_foods
            .col-xs-3
              .panel.panel-default
                .panel-heading=food.name
                .panel-body.text-center
                  img(src="/static/images/" + food.picture + ".jpg")
                .panel-footer.text-center
                  a.btn.btn-default(href="/foods/details/" + food.id) See More
        hr
        .text-center
          ul.pagination
            - var n = 1;
              while n <= viewmodel.count_pages
                li
                  a(href="/foods/" + n)=n++