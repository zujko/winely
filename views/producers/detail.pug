extends ../layout.pug

block content
  .container-fluid.cover(style="background-image: url('/images/" + viewmodel.magic.getPic(viewmodel.id,"vineyard")+ ".jpg');")
    .vcenter
      .col-xs-12.col-sm-6.col-sm-offset-3.text-center
        h1.--inverse=viewmodel.name
  .container
    .row
      .col-md-12
        .panel.panel-default
          .panel-body
            .text-content
              p #{viewmodel.description}
  div.hero-head.hero-head-primary
    h2.text-center All Wines
  .container-fluid.highlight-primary
    .row

      each wine in viewmodel.wines
          .col-xs-6.col-sm-3
            a(href="/wines/details/" + wine.id)
              .panel.panel-default
                .panel-body
                  .text-center
                    div.imgcard(style="background-image:url(\"/images/" + viewmodel.magic.getPic(wine.id,"wine") + ".jpg\");")
                      br
                    .tile-text
                      span=wine.name
                    p #{wine.color} - #{wine.price}
  .brand-stripe
  .container-fluid.cover(style="background-image: url('/images/" + viewmodel.magic.getPic(viewmodel.region.id,'region') + ".jpg');")
    .vcenter
      .col-xs-12.col-sm-6.col-sm-offset-3.text-center
        h1.--inverse #{viewmodel.region.title}
        p.text-center(style="color:white;")=viewmodel.region.description
        br
        a.btn.btn-default(href="/regions/details/" + viewmodel.region.id) Learn More
