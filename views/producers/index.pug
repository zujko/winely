extends ../layout.pug

block content
  .container
    h2.text-center Suggested Producers
    hr
    .row
      each producer, index in viewmodel.selected_producers
        .col-md-2.hidden-sm.hidden-xs
          .panel.panel-default
            .panel-heading=producer.name
            .panel-body.text-center
              img(src="/static/images/" + producer.picture + ".jpg")
            .panel-footer.text-center
              a.btn.btn-default(href="/producers/details/" + producer.id) See More
        if index < 4
          .col-xs-3.col-sm-3.hidden-md.hidden-lg
            .panel.panel-default
              .panel-heading=producer.name
              .panel-body.text-center
                img(src="/static/images/" + producer.picture + ".jpg")
                p=producer.climate
              .panel-footer.text-center
                a.btn.btn-default(href="/producers/details/" + producer.id) See More
    .row
      .col-md-2
        h4 Filters
      .col-md-10
        h3.text-center Browse producers
        hr
        .row
          each producer in viewmodel.result_producers
            .col-xs-3
              .panel.panel-default
                .panel-heading=producer.name
                .panel-body.text-center
                  img(src="/static/images/" + producer.picture + ".jpg")
                  p=producer.climate
                .panel-footer.text-center
                  a.btn.btn-default(href="/producers/details/" + producer.id) See More
        hr
        .text-center
          ul.pagination
            - var n = 1;
              while n <= viewmodel.count_pages
                li
                  a(href="/producers/" + n)=n++