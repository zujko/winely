<form action="EXAMPLE_ACTION" method="post">

  <h1>Wine Form</h1><br>

  Name:<br>
  <input type="text" name="name"><br>

  Vintage:<br>
  <input type="number" name="vintage" min="0" max="2017"><br>

  Vineyard:<br>
  <select name="vineyard">
  {{#each vineyards}}
    <option value= "{{this.id}}" >{{this.name}}</option>
  {{/each}}
  </select>
  <br>

  Price:<br>
  <input type="number" min="0.01" step="0.01" max="2500"/><br>

  Color:<br>
  <select name="color">
    <option value="red">Red</option>
    <option value="white">White</option>
  </select><br>

  Is Red:<br>
  <select name="is_red">
    <option value="no">no</option>
    <option value="yes">yes</option>
  </select><br>

  Alcohol:<br>
  <input type="number" name="alcohol" min="0" max="100"/><br>

  Sugar:<br>
  <input type="number" name="sugar" min="0" max="100"/><br>

  Brix:<br>
  <input type="number" name="brix" min="0" max="100"/><br>

  Body:<br>
  <input type="number" name="body" min="0" max="100"/><br>

  Tannin:<br>
  <input type="number" name="tannin" min="0" max="100"/><br>

  Fruity<br>
  <select name="fruity">
    <option value="no">no</option>
    <option value="yes">yes</option>
  </select><br>

  Spicy:<br>
  <select name="spicy">
    <option value="no">no</option>
    <option value="yes">yes</option>
  </select><br>

  Tart:<br>
  <select name="tart">
    <option value="no">no</option>
    <option value="yes">yes</option>
  </select><br>

  Description:<br>
  <textarea name="description" rows="5" cols="20"></textarea><br>

  <input type="submit" value="Submit">

</form>
