extends ../layout.pug

block content
  .container-fluid.cover(style="background-image: url('/images/" + viewmodel.picture + ".jpg');")
    .vcenter
      .col-xs-12.col-sm-6.col-sm-offset-3.text-center
        h1.--inverse=viewmodel.name
  .container
    .row
      .col-md-12
        .panel.panel-default
          .panel-body
            .text-content
              p #{viewmodel.description}
  div.hero-head.hero-head-primary
    h2.text-center Suggested Wines
  .container-fluid.highlight-primary
    .row
      each wine, index in viewmodel.suggested_wines
        .col-xs-6.col-sm-3
          a(href="/wines/details/" + wine.id)
            .panel.panel-default
              .panel-body
                .text-center
                  div(style="background-image:url(\"/images/" + wine.picture + ".jpg\");height: 100px;")
                    br
                  .tile-text
                    span=wine.name
  div.hero-head.hero-head-secondary
    h2.text-center Suggested Producers
  .container-fluid.highlight-secondary
    .row
      each producer, index in viewmodel.suggested_producers
        .col-xs-6.col-sm-3
          a(href="/producers/details/" + producer.id)
            .panel.panel-default
              .panel-body
                .text-center
                  div(style="background-image:url(\"/images/" + producer.picture + ".jpg\");height: 100px;")
                    br
                  .tile-text
                    span=producer.name
  div.hero-head.hero-head-tertiary
    h2.text-center Vintage History
  .container-fluid.highlight-secondary
    .row
      each vintage, index in viewmodel.vintages
        .col-sm-4
          .panel.panel-default
            .panel-heading=vintage.year
            .panel-body.text-center
              .text-content
                p #{vintage.description}